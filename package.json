{
  "name": "uc-updater",
  "version": "1.0.0",
  "description": "A docker container to update UC's",
  "main": "index.js",
  "scripts": {
    "start": "cd build && node index.js",
    "build": "rm -rf build/ && tsc && npm run copy:openocd",
    "build:start": "npm run build && npm start",
    "copy:openocd": "cp -r ./src/openocd ./build/openocd",
    "format": "prettier --config .prettierrc --write ."
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --config .prettierrc --write"
    ]
  },
  "author": "Bram van Deventer",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
